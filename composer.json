{
    "name": "salvation/mongo-chat",
    "description": "Chat Package for Laravel in MongoDB",
    "type": "library",
    "keywords": [
        "laravel",
        "chat",
        "messaging",
        "conversation",
        "mongo-chat"
    ],
    "require": {
        "php": ">=7.3",
        "laravel/framework": "^6.0|^7.0|^8.0",
        "spatie/laravel-fractal": "^5.8",
        "laravel/legacy-factories": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0|^9.0",
        "orchestra/testbench": "^4.0|^6.0",
        "mockery/mockery": "^1.0.0"
    },
    "minimum-stability": "dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Salvation Arinze",
            "email": "modernbabbage@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Musonza\\Chat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Musonza\\Chat\\Tests\\": "tests"
        },
        "files": [
            "tests/Helpers/Models.php"
        ]
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Musonza\\Chat\\ChatServiceProvider"
            ],
            "aliases": {
                "Chat": "Musonza\\Chat\\Facades\\ChatFacade"
            }
        }
    }
}
